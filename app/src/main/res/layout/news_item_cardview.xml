<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/news_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0.5dp"
    android:elevation="2dp"
    app:cardCornerRadius="4dp"
    android:minHeight="120dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/news_card_image"
            android:layout_width="175dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:transitionName="mainListImage"
            android:padding="5dp"
            android:contentDescription="@string/newsDescriptionFragmentContentDescription"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="7dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/headline_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/headline_card"
                android:textSize="16sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/author_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/by_author"
                android:textColor="#000"
                android:textSize="12dp"
                android:visibility="gone"/>


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>